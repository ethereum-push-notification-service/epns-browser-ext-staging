{
  "manifest_version": 2,

  "name": "EPNS",
  "description": "EPNS Notification to receive notifications",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "epns-small2.png",
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "background":{
    "scripts":["background.js"],
    "persistent":true
  },
  "content_security_policy": "script-src 'self' 'sha256-shpRLid+sdnnB34hN3cB+/0NvCgm4ydxJMTjK4oirSY=' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
  "permissions": ["identity","background", "tabs", "storage", "notifications", "webRequest", "webRequestBlocking", "<all_urls>", "unlimitedStorage"],
  "gcm_sender_id": "532398581043"

}